<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Стартовая тема загрузки-->
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">@color/darkgreen</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>