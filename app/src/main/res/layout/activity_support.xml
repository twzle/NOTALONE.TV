<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbarThumbVertical="@color/white"
        >


        <LinearLayout
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="20dp"
                    android:text="Поддержка"
                    android:textSize="44sp"
                    android:fontFamily="@font/lato_black"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="12.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Форма для связи"
                android:textSize="20sp"
                style="@style/TextView"
                />

            <EditText
                android:id="@+id/support_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Ваше имя"
                android:textColorHint="#656567"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_style"
                android:padding="10dp" />

            <EditText
                android:id="@+id/support_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Вопрос обращения"
                android:textColorHint="#656567"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_style"
                android:padding="10dp"
                style="@style/EditText"/>


            <EditText
                android:id="@+id/support_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Текст обращения"
                android:textColorHint="#656567"
                android:gravity="top"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:lines="4"
                android:background="@drawable/edit_text_style"
                android:padding="10dp" />


            <Button
                android:id="@+id/support_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отправить"
                android:focusable="true"
                android:clickable="true"
                android:backgroundTint="@color/darkgreen"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="9dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="12.5dp"
                android:text="Поддержать проект"
                android:textSize="20sp"
                style="@style/TextView"
                />

            <EditText
                android:id="@+id/donation_ammount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Сумма"
                android:textColorHint="#656567"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/edit_text_style"
                android:padding="10dp" />

            <EditText
                android:id="@+id/donation_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Сообщение пожертвования"
                android:textColorHint="#656567"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="4"
                android:background="@drawable/edit_text_style"
                android:padding="10dp" />


            <Button
                android:id="@+id/donate_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Поддержать"
                android:focusable="true"
                android:clickable="true"
                android:backgroundTint="@color/darkgreen"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="9dp"
                android:layout_marginBottom="0dp"
                />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

