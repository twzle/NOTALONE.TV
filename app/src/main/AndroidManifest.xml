<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_notalone"
        android:label="NotAlone"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/ic_notalone_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".views.UserInformationActivity"
            android:label="Пользователь"
            android:theme="@style/dark"></activity>
        <activity android:name=".views.SignInActivity"></activity>
        <activity
            android:name=".views.ProfileActivity"
            android:label="Аккаунт"
            android:theme="@style/dark"></activity>
        <activity android:name=".views.AuthActivity" /> <!-- SplashScreen activity -->
        <activity
            android:name=".views.SplashActivity"
            android:windowBackground="@color/gray">

            <!-- android:theme="@style/SplashTheme"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ThirdActivity -->
        <activity
            android:name=".views.RulesActivity"
            android:label="@string/title_activity_third" /> <!-- SecondActivity -->
        <activity
            android:name=".views.SupportActivity"
            android:label="Поддержка"
            android:theme="@style/Theme.MyApplication"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".views.AboutActivity"
            android:label="@string/title_activity_second"
            android:theme="@style/Theme.MyApplication" /> <!-- MainActivity -->
        <activity
            android:name=".views.MainActivity"
            android:label=""
            android:windowSoftInputMode="adjustPan">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>